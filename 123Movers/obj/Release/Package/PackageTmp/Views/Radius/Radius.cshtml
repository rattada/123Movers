        <div class="form-group">
            <strong>Category</strong><br />
            <select name="origordest" id="ddlorigordest" class="form-control dropdown" size="1" title="Select Category">
                <option value="">--Choose One--</option>
                <option value="ORIGIN">Origin</option>
                <option value="DEST">Destination</option>
            </select>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="form-group">
            <strong style="margin-left:15px">Radius(Miles)</strong><br />
            <div class="col-lg-6" style="padding-right:2px !important">
                <input type="text" id="txtradius" title="Enter Radius" class="form-control" />
            </div>
             <div class="col-lg-6">
                <select name="lesserorgreater" id="ddllessorgreate" class="dropdown form-control" size="1" title="Select One">
                    <option value="LESSER">Lesser(<)</option>
                    <option value="GREATER">Greater(>)</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12" style="margin-top:15px" >
                <strong>Origin Zip Code</strong><br />
                <input type="text" id="txtzipcode" class="form-control" title="Enter Zip Code" />
            </div>
        </div>
    </div>
</div>

