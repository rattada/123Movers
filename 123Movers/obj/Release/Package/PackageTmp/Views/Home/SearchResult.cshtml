@model IEnumerable<_123Movers.Models.SearchModel>

@{
    ViewBag.Title = "SearchResult";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="nav nav-pills navbar-inverse">
    <p style ="color:white">@Model.Count()- Results(s)</p>
</div>
  <table id="info" class="sortableTable insideMod dtbl">
    <colgroup>
		<col span="8" />
        <col style="width: 15%; white-space: nowrap;" />
		<col style="width: 80px;" />
    </colgroup>
    <tr>
        <th>
            Company Id
        </th>
        <th>
            Company Name
        </th>
        <th>
            Budget Amount
        </th>
        <th>
            Remaing Budget
        </th>
        <th>
            Recuring
        </th>
        <th>
            agreementNumber
        </th>
    </tr>
    @if (@Model.Any())
    {
        foreach (var lot in Model)
        {
        <tr>
            <td>
                @lot.CompanyId
            </td>
            <td>
                @lot.CompanyName
            </td>
            <td>
                @lot.TotalBudget
            </td>
            <td>
                @lot.RemainingBudget
            </td>
            <td>
                @lot.IsRecurring
            </td>
            <td>
                @lot.AgreementNumber
            </td>
        </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="10" class="loneTd">
                No Bugdets found
            </td>
        </tr>
    }
</table>

