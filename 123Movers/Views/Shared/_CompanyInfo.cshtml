@model _123Movers.Models.CompanyModel

@{
    var suspended = @Model.Suspended == "Yes" ? "Suspended" : @Model.IsActive ? "Active" : "Inactive";
}
<div class="row">
    <div class="col-md-12">
        <p></p>
        <table class="table table-bordered" style="margin-bottom: 0px;">
            <tbody>
                <tr>
                    <td>Legal Name : <strong>@Model.CompanyName</strong></td>
                    <td >CompanyID : <strong>@Model.CompanyId</strong></td>
                    <td>AX # : <strong>@Model.Ax</strong></td>
                    <td>Sales Person : <strong>@Model.ContactPerson</strong></td>
                    <td>Status : <strong>@suspended</strong></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


